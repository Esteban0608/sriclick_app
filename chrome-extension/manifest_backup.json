{
  "manifest_version": 3,
  "name": "SRICLICK - Descarga Masiva SRI",
  "version": "1.0.0",
  "description": "Extensión para descarga masiva de facturas y notas de crédito del SRI",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "nativeMessaging",
    "alarms"
  ],
  "host_permissions": [
    "https://srienlinea.sri.gob.ec/*",
    "https://www.sri.gob.ec/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://srienlinea.sri.gob.ec/*",
        "https://www.sri.gob.ec/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SRICLICK",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
